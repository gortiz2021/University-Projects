<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <script src="https://aframe.io/releases/1.0.4/aframe.min.js"></script>
    <script src="https://unpkg.com/aframe-simple-sun-sky@^1.2.2/simple-sun-sky.js"></script>
    <script src="link_pages.ejs"></script>
  </head>

  <body>
    <a-scene>
      
        <img crossorigin="anonymous" id="Carpet" src = "https://cdn.glitch.com/92f001ae-285d-4fcf-9d89-2ca2a1eab7f0%2FTexturesCom_MarbleBase0046_2_M.png?v=1618803753583">
        
        
        <a-plane roughness = "0.3"
               repeat = "10 10" src = "#Carpet" rotation = "-90 0 0" position = "0 -0.01 -7" height = "50" width = "50"></a-plane>
        <a-box id="music" width="0.5" height="0.2" position="-3 3 -7" scale="2.2 1.2 0.01" color="grey" enter_music_room>
          <a-text value="Music Room" color="blue" position="-0.249 0 3.290" scale="0.4 1 1"></a-text>
        </a-box>
        <a-box id="media" width="0.5" height="0.2" position="0 3 -7" scale="2.2 1.2 0.01" color="grey" enter_movie_room>
          <a-text value="Movie Room" color="blue" position="-0.25423 -0.00478 7.1264" scale="0.4 1 1" text=""></a-text>
        </a-box>
        <a-box id="info" width="0.5" height="0.2" position="3 3 -7" scale="2.2 1.2 0.01" color="grey" enter_info_center>
          <a-text value="Info Center" color="blue" position="-0.21908 -0.00068 2.85519" scale="0.4 1 1" text=""></a-text>
        </a-box>
        
        
        
        <!-- Sun and Sky model 
        <a-simple-sun-sky sun-position="0.5 0.5 1"></a-simple-sun-sky>
        <a-entity light="type: ambient; color: #BBB"></a-entity>
        <a-entity id="directional" light="type: directional; color: #FFF; intensity: 1.3" position="0.5 1 2"></a-entity> 
        <a-entity id="directional" light="type: directional; color: #FFF; intensity: 1.3" position="-0.5 1 -2"></a-entity> 
        -->
        <a-sky color="#87ceff"></a-sky>
        
        <!-- Camera and Cursor -->
        <a-entity position="0 0 0">
          <a-camera>
            <a-cursor>
            </a-cursor>
          </a-camera>
        </a-entity>
  
    

    </a-scene>
  </body>
</html>