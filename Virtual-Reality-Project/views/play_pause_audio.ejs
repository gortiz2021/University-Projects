AFRAME.registerComponent('drums_play_pause', {   <!-- Registering a component called 'drums_play_pause' -->
        init: function() {
          var test_drums = document.querySelector ('#drums_audio');
          this.el.addEventListener('click', function(){
                                   if (test_drums.paused){      <!-- If drums are paused -->
                                          test_drums.play();    <!-- On clicking the drums will be played -->
                                        }
                                   else { <!-- If drums are being played -->
                                    test_drums.pause();  <!-- After clicking it will pause the drums -->
                                  }
                                   });
        }
});

